
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/jquery-easyui-1.5.5.2/themes/default/easyui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery-easyui-1.5.5.2/themes/icon.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery-easyui-1.5.5.2/demo/demo.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.2.4.js" type="text/javascript"></script>
    <script src="~/Content/jquery-easyui-1.5.5.2/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="~/Content/jquery-easyui-1.5.5.2/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <script src="~/Content/angular-1.5.8/angular.js" type="text/javascript"></script>
    <script src="~/Content/angular-1.5.8/angular-animate.js" type="text/javascript"></script>

    <link href="~/CSS/Car/Car.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/Car/Car.js" type="text/javascript"></script>

</head>
<body>
    <div class="easyui-panel" title="Layout" iconCls="icon-search" collapsible="true" style="padding:5px;width:1200px;height:750px;">
        <div class="easyui-layout" fit="true">
            <div data-options="region:'west', border:false" style="width:300px;height:700px">
                <div class="easyui-layout" fit="true">
                    <div data-options="ragion:'north', border:false"
                         style="width:300px;height:200px">

                        <div ng-app="myApp" ng-controller="personCtrl">
                            <button ng-click="toggle()">隐藏/显示</button>
                            <p ng-show="myVar">
                                名: <input type=text ng-model="person.firstName"><br>
                                姓: <input type=text ng-model="person.lastName"><br><br>
                                姓名: {{person.firstName + " " + person.lastName}}
                            </p>

                        </div>
                    </div>
                    <div data-options="ragion:'south',border:false" >
                        <ul class="easyui-tree">
                            <li>
                                <span>Folder</span>
                                <ul>
                                    <li>
                                        <span>Sub Folder 1</span>
                                        <ul>
                                            <li><span>File 11</span></li>
                                            <li><span>File 12</span></li>
                                            <li><span>File 13</span></li>
                                        </ul>
                                    </li>
                                    <li><span>File 2</span></li>
                                    <li><span>File 3</span></li>
                                </ul>
                            </li>
                            <li><span>File21</span></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div data-options="region:'center', border:false" style="width:100%;height:100%">
                <div class="easyui-tabs" style="width:100%;height:100%;">
                    <div title="First Tab" style="padding:10px;">
                        <div class="easyui-layout" fit="true">
                            <div data-options="ragion:'north', border:false,split:true" style="width:100%;height:50%">
                                <form id="form1" method="post">
                                    <div style="width:100%;height:50%">
                                        <div style="width:100%;height:auto">
                                            <span>
                                                First Name: <input type="text" class="easyui-textbox" style="width:150px" />
                                            </span>
                                            <span style="position:relative">
                                                Last Name: <input type="text" class="easyui-textbox" style="width:150px" />
                                            </span>
                                            <span>
                                                ComboBox:
                                                <select class="easyui-combobox" style="width:150px;position:relative" data-options="editable:false,panelHeight:'auto'">
                                                    <option>option1</option>
                                                    <option>option2</option>
                                                    <option>option3</option>
                                                </select>
                                            </span>
                                        </div>
                                        <div style="width:100%;height:auto">
                                        </div>
                                        <div style="width:100%;height:auto">
                                            <p style="margin:5px 0px">
                                                Calender: <br />
                                                Date1 <input class="easyui-datetimebox" value="01/01/1001 00:00:00" sharedCalender="#sc" />
                                                Date2 <input class="easyui-datetimebox" value="12/31/2099 23:59:59" sharedCalender="#sc" />
                                                <div id="sc" class="easyui-calender"></div>
                                            </p>
                                        </div>

                                        <div style="width:100%;height:auto">
                                            <span>
                                                Number: <br />
                                                int: <input class="easyui-numberbox" value="0" />
                                                Spinner: <input class="easyui-numberspinner" value="0" data-options="increment:1" />
                                                <br />
                                                decimal(2):<input class="easyui-numberbox" data-options="precision:2" value="0"/>
                                                currency(3):<input class="easyui-numberbox" data-options="precision:3,groupSeparator:',', decimalSeparator:'.'" value="123456.789" />
                                            </span>
                                        </div>

                                        <div style="width:100%;height:auto">
                                            <span>
                                                Limit Length(15): <input class="easyui-textbox" maxlength="15" id="limitTxt" />
                                                Email: <input class="easyui-validatebox textbox" style="height:28px" data-options="required:true,validType:'email'"/>
                                                Url: <input class="easyui-validatebox textbox" style="height:28px" data-options="required:true,validType:'url'" />
                                            </span>                                            
                                        </div>

                                        <div style="width:100%;height:auto">
                                            1 <input type="checkbox" name="team1" id="chk1" />
                                            2 <input type="checkbox" name="team1" id="chk2" />
                                            3 <input type="checkbox" name="team2" id="chk3" />
                                            <br />
                                            4 <input type="checkbox" name="team2" id="chk4" />
                                            5 <input type="checkbox" name="team3" id="chk5" />
                                            6 <input type="checkbox" name="team3" id="chk6" />
                                            <br />
                                            7 <input type="checkbox" name="team3" id="chk7" />
                                        </div>



                                        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'">Search</a>
                                    </div>
                                </form>
                            </div>
                            <div data-options="ragion:'south', border:false,split:true" style="width:100%;height:50%">
                                <table id="tt" title="" class="easyui-datagrid" iconcls="icon-edit"></table>
                            </div>
                        </div>
                    </div>
                    <div title="Second Tab" closable="true" style="padding:10px;">
                        Second Tab
                        <div class="easyui-layout" fit="true">
                            <div data-options="ragion:'north', border:false,split:true" style="background-color:goldenrod;width:830px;height:200px">
                                <form id="form2" method="post">
                                    <div>
                                        <div>
                                            <div>
                                                <span> First Name: </span>
                                            </div>
                                            <div>
                                                <input type="text" class="textbox-text easyui-validatebox" style="width:150px" />
                                            </div>

                                        </div>
                                        <div>
                                            <div>
                                                <span> Last Name: </span>
                                            </div>
                                            <div>
                                                <input type="text" class="textbox-text easyui-validatebox" style="width:150px" />
                                            </div>
                                        </div>
                                    </div>
                                    <select class="easyui-combobox" style="width:150px">
                                        <option>option1</option>
                                        <option>option2</option>
                                        <option>option3</option>
                                    </select>

                                    <input class="easyui-datebox" sharedCalender="#sc" />
                                    <input class="easyui-datebox" sharedCalender="#sc" />
                                    <div id="sc" class="easyui-calender"></div>
                                </form>
                            </div>
                            <div data-options="ragion:'south', border:false,split:true" style="background-color:darkgrey;width:830px;height:400px">
                                <table id="dg" title="Grid" class="easyui-datagrid" style="width:830px;height:250px"
                                       rownumbers="true" fitColumns="true" singleSelect="true">
                                    <thead>
                                        <tr>
                                            <th field="firstname" width="50">First Name</th>
                                            <th field="lastname" width="50">Last Name</th>
                                            <th field="phone" width="50">Phone</th>
                                            <th field="email" width="50">Email</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div title="Third Tab" iconCls="icon-reload" closable="true" style="padding:10px;">
                        Third Tab
                        <div class="easyui-layout" fit="true">
                            <div data-options="ragion:'north', border:false,split:true" style="background-color:darksalmon;width:830px;height:200px">
                                <form id="form3" method="post">
                                    <div>
                                        <div>
                                            <div>
                                                <span> First Name: </span>
                                            </div>
                                            <div>
                                                <input type="text" class="textbox-text easyui-validatebox" style="width:150px" />
                                            </div>

                                        </div>
                                        <div>
                                            <div>
                                                <span> Last Name: </span>
                                            </div>
                                            <div>
                                                <input type="text" class="textbox-text easyui-validatebox" style="width:150px" />
                                            </div>
                                        </div>
                                    </div>
                                    <select class="easyui-combobox" style="width:150px">
                                        <option>option1</option>
                                        <option>option2</option>
                                        <option>option3</option>
                                    </select>

                                    <input class="easyui-datebox" sharedCalender="#sc" />
                                    <input class="easyui-datebox" sharedCalender="#sc" />
                                    <div id="sc" class="easyui-calender"></div>
                                </form>
                            </div>
                            <div data-options="ragion:'south', border:false,split:true" style="background-color:cadetblue;width:830px;height:400px">
                                <table id="dg" title="Grid" class="easyui-datagrid" style="width:830px;height:250px"
                                       rownumbers="true" fitColumns="true" singleSelect="true">
                                    <thead>
                                        <tr>
                                            <th field="firstname" width="50">First Name</th>
                                            <th field="lastname" width="50">Last Name</th>
                                            <th field="phone" width="50">Phone</th>
                                            <th field="email" width="50">Email</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>